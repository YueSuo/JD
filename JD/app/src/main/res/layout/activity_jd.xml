<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sy.jd.JdActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/sy_top"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="18dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/left"
            android:layout_height="18dp"
            android:id="@+id/sy_left" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/sy_sp"
            android:layout_toRightOf="@+id/sy_left"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="商品"
            android:textSize="14sp" />
        <Button
            android:layout_width="28dp"
            android:background="#000"
            android:layout_toRightOf="@+id/sy_left"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="90dp"
            android:layout_height="2dp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/sy_xq"
            android:layout_toRightOf="@+id/sy_sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="详情"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/sy_pj"
            android:layout_toRightOf="@+id/sy_xq"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="评价"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="18dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/duo"
            android:id="@+id/sy_duo"
            android:layout_alignParentRight="true"
            android:layout_height="18dp" />
        <ImageView
            android:layout_width="18dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/sy_duo"
            android:layout_marginRight="10dp"
            android:src="@mipmap/fenx"
            android:layout_height="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/sy_bottom"
        android:layout_alignParentBottom="true"
        android:layout_height="72dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="28dp"
                    android:src="@mipmap/kefut"
                    android:layout_above="@+id/sy_gyswz"
                    android:layout_marginBottom="5dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/sy_gyst"
                    android:layout_height="28dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/sy_gyswz"
                    android:text="供应商"
                    android:textSize="10dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="28dp"
                    android:src="@mipmap/dianpu"
                    android:layout_above="@+id/sy_dianpuw"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/sy_dianpu"
                    android:layout_height="28dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/sy_dianpuw"
                    android:text="店铺"
                    android:textSize="10dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="28dp"
                    android:src="@mipmap/zan"
                    android:layout_above="@+id/sy_zanw"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/sy_zan"
                    android:layout_height="28dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/sy_zanw"
                    android:text="关注"
                    android:textSize="10dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="28dp"
                    android:src="@mipmap/gowu"
                    android:layout_above="@+id/sy_gouwuw"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/sy_gouwu"
                    android:layout_height="28dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/sy_gouwuw"
                    android:text="供应商"
                    android:textSize="10dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:text="加入购物车"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#e43f39"
                android:textSize="14sp"
                android:layout_weight="3"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/sy_center"
        android:layout_above="@+id/sy_bottom"
        android:layout_below="@+id/sy_top"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@mipmap/iPhoneX"
                android:layout_height="300dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/play"
                    android:id="@+id/sy_play"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:text="00'48"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:background="#43000000"
                    android:textColor="#ba050505"
                    android:layout_toRightOf="@id/sy_play"
                    android:layout_height="30dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
